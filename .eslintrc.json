{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "rules": {
        // overrides
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2,
        "react-native/no-color-literals": 2,
        // tweak
        "semi": [1, "never"],
        // disable
        "require-jsdoc": "off"
    }
}